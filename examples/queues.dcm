# A dcm implementation of queues as a singly linked list
# Plugins: prelude

,Queues guard

: {

Error inherit {
    "queue underflow" $msg
} $UnderflowError

[UnderflowError ; throw] def $underflowError

class inherit {
    ,; upcopy
    [
        me r
        ?tail
        [ @tail { : { $val } dup $next } $tail ]
        [ : { $val } dup $tail $head ]
        if x
    ] def $push
    
    [
        me
        ?head
        [ @head {
            $val
            ?next
            [ @next _ { $head } ]
            [ @tail del ]
            if x
        ]
        [ underflowError ]
        if x
    ] def $poll
    [
        me
        ?head
    ] def $empty
} $Queue

} ,Queues module
